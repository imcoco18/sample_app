<div class='body'>
  <div class='container'>
  <div class="row">

   <section class="headline">
    <h2>User info</h2>
    <%= form_for(@user) do |f| %>


    <div class="field">
      <label for="user_name">Name</label>
      <%= f.text_field :name, autofocus: true, class:"", id:"user_name", placeholder:"名前"%>
    </div>

    <div class="field">
      <label for="user_image">Image</label>
       <%= f.attachment_field :profile_image, class: "user-edit-form" %>

    </div>

    <div class="field">
      <label for="user_introduction">Introduction</label>
      <textarea class="introduction" name="user[introduction]" id="user_introduction">
      </textarea>
    </div>

      <%= f.submit "Update User", class:"btn btn-default" %>

    <% end %>

   </section>


  </div>
  </div>
</div>