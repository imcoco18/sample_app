<div class='body'>
  <div class='container'>
  <div class="row">
    <div class="block">
   <section class="headline">
    <h2>User info</h2>
    <%= form_for(@user) do |f| %>


    <div class="field">
      <label for="user_name">Name</label>
      <%= f.text_field :name, autofocus: true, class:"", id:"user_name", placeholder:"名前"%>
    </div>

    <div class="field">
      <label for="user_image">Image</label>
       <%= f.attachment_field :profile_image, class: "user-edit-form" %>

    </div>

    <div class="field">
      <label for="user_introduction">Introduction</label>
      <%= f.text_area :introduction, class: "user-introduction" %>
      </textarea>
    </div>

      <%= f.submit "Update User", class:"btn btn-default" %>

    <% end %>

   </section>

    </div>
  </div>
  </div>
</div>