<div class='body'>
  <div class='container'>

        <p id="notice"></p>


      	<h2>User info</h2>
    <%= form_for(@user) do |f| %>


    <div class="field">
      <label for="user_name">Name</label>
      <%= f.text_field :name, autofocus: true, class:"form-control", id:"user_name", placeholder:"名前"%>
    </div>

    <div class="field">
      <label for="user_image">Image</label>
       <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
       <%= f.attachment_field :profile_image, class: "user-edit-form" %>

    </div>

    <div class="field">
      <label for="user_introduction">Introduction</label>
      <textarea class="introduction" name="user[introduction]" id="user_introduction">
      </textarea>
    </div>

      <%= f.submit "Update User", class:"btn btn-default" %>

    <% end %>



  </div>
</div>