
<body class="index">
<h1>Books</h1>

<table>
<thead>
  <tr>
 	<th>Title</th>
	<th>Body</th>
	<th colspan="3"></th>
  </tr>
</thead>

<tbody class="tbody">
  <% @books.each do |book| %>
  <tr>
	<td>
	   <%= book.title %>
	</td>
	<td>
		<%= book.body %>
	</td>
	<td>
		<%= link_to "Show", book_path(book.id) %>
	</td>
	<td>
	   <div class="button">
		<%= link_to "Edit", edit_book_path(book.id) %>
	   </div>
	</td>
	<td>
	   <div class="button">
		<%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
	   </div>
	</td>
  </tr>

  <% end %>
</tbody>
</table>


<h2 class="newbook-headline">New book</h2>
<%= form_for(@book) do |f| %>

ã€€<% if @book.errors.any? %>
  	<div id="error_explanation">
    <h2><%= @book.errors.count %></h2>
    	<ul>
    		<% @book.errors.full_messages.each do |msg| %>
      			<li><%= msg %></li>
    		<% end %>
    	</ul>
  	</div>
  <% end %>

	<p class="box">Title</p>
	<%= f.text_field :title %>

	<p class="box">Body</p>
	<%= f.text_area :body %>
	<p>
	<%= f.submit "Create Book" %>
	</p>
<% end %>


</body>