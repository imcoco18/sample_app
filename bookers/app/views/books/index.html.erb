<!--Books-->
<div class="container">
 <div class="row">
 	<div class="col-lg-3" style="background-color: orange;">
 		<h2>User info</h2>
			<table class='table'>
      			<tr>
      	    			<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>

      			</tr>
      			<tr>
    	  			<th>name</th>
    	  			<th><%= @user.name %></th>
      			</tr>
      			<tr>
    	  			<th>introduction</th>
    	  			<th><%= @user.introduction %></th>
      			</tr>
			</table>

			<div class='row'>



			</div>

    	

 	</div>




	<div class="col-lg-9">
		<h2>Books</h2>

		<table class='table table-hover table-inverse'>
  		<thead>
    		<tr>
      		<th></th>
      		<th>Title</th>
      		<th>Opinion</th>
      		<th colspan="3"></th>
    		</tr>
  		</thead>

  		<tbody>
  			<% @books.each do |book| %>
 		 	<tr>
        		<td>
          			<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %>

        		</td>
        		<td>
        			<%= book.title %>
        		</td>
        		<td>
        			<%= book.body %>
        		</td>
      		</tr>
      		<% end %>
  		</tbody>
		</table>
	</div>
 </div>
</div>
