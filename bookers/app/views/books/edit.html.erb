
<body class="edit">

<h1 class="headline">Editing Book</h1>

<%= form_for(@book) do |f| %>
	<% if @book.errors.any? %>
  	<div id="error_explanation">
    <h2><%= @book.errors.count %></h2>
    	<ul>
    		<% @book.errors.full_messages.each do |msg| %>
      			<li><%= msg %></li>
    		<% end %>
    	</ul>
  	</div>
  <% end %>
    <p class="box">Title</p>
    <%= f.text_field :title %>
    <p class="box">Body</p>
    <%= f.text_area :body %>
    <p>
    <%= f.submit 'Update Book' %>
	</p>
<% end %>


<p>

<%= link_to "Show", book_path(@book) %> |
<%= link_to "Back", books_path %>


</p>

</body>